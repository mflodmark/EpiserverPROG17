@model EpiserverPROG17.Models.Blocks.ImageLeftBlock

<!-- Page Content -->
<div class="content-section-b">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 col-lg-offset-1 col-sm-push-6  col-sm-6">
                <hr class="section-heading-spacer">
                <div class="clearfix"></div>
                <h2 class="section-heading">
                    @Html.DisplayFor(x => x.Heading)
                    <br>
                    @Html.DisplayFor(x => x.Heading2)
                </h2>
                @Html.PropertyFor(x => x.Text, null, new { @class = "lead" })
                <a class="lead" target="_blank" href="@Url.ContentUrl(Model.Link)">
                    @Html.DisplayFor(x => x.LinkText)
                </a>
                @Html.PropertyFor(x => x.Text2, null, new { @class = "lead" })
            </div>
            <div class="col-lg-5 col-sm-pull-6  col-sm-6">
                <img class="img-responsive" src="@Url.ContentUrl(Model.Image)" alt="">
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
<!-- /.content-section-b -->